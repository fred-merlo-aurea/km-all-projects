<UserControl x:Class="WpfControls.UADControls.HorizontalRadioButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
            <TextBlock Text="Search All: " Foreground="Black" />
            <RadioButton Name="rbtnSearchAll" Checked="rbtnSearchAll_Checked" Unchecked="rbtnSearchAll_Unchecked" />
            <TextBlock Text="Search Selected Products: " Foreground="Black" />
            <RadioButton Name="rbtnSearchSelected" Checked="rbtnSearchSelected_Checked" Unchecked="rbtnSearchSelected_Unchecked" />
        </StackPanel>
    </Grid>
</UserControl>
