<Window x:Class="WpfControls.WindowsAndDialogs.SplitsOrganizer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" 
        Title="SplitsOrganizer" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="txtStandard"  Grid.Row="0" Text="Choose a Split to apply records to: " Margin="5" FontSize="16"/>
        <ListBox Grid.Row="1" Margin="5" Name="lbSplits">          
        </ListBox>
        <Rectangle Grid.Row="2" Grid.ColumnSpan="2" Fill="#C7CACC" />
        <telerik:RadButton Name="btnConfirm" Grid.Row="2" Content="Confirm" HorizontalAlignment="Right" Margin="5" Width="65" Click="btnConfirm_Click" />
    </Grid>
</Window>
