@using Kendo.Mvc.UI

@(Html.Kendo().DropDownList()
              .Name("selectedDataBaseField")
              .OptionLabel("- Select -")
              .DataSource(d => d.Read(r => r.Action("GetDataBaseFields", "FileMapperWizard")))
              .DataTextField("Text")
              .DataValueField("Value")
    .Events(e =>
    {
        e.Select("onSelectDataBaseFields");
    })
)
