@using Kendo.Mvc.UI

@(Html.Kendo().DropDownList()
              .Name("selectedMatchType")
              .DataSource(d => d.Read(r => r.Action("GetMatchTypes", "FileMapperWizard")))
              .DataTextField("Text")
              .DataValueField("Value")
    .Events(e =>
    {
        e.Select("onSelectMatchType");
        e.Change("onChangeMatchType");
    })
)


