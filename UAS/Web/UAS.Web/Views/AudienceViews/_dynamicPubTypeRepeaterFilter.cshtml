@model UAS.Web.Models.UAD.Filter.DynamicFilter

@for (int i = 0; i < Model.PubTypeFilterList.Count; i++)
{
    if (Model.PubTypeFilterList[i].PubList != null && Model.PubTypeFilterList[i].PubList.Count > 0)
    {
        <table class="pubTypeRepeater">
            <tr>
                <td valign="middle" align="center">
                    <a data-pubtype="@Model.PubTypeFilterList[i].PubTypeID" id="lnkPubType_@Model.PubTypeFilterList[i].PubTypeID"  onclick="openPubTypePopup(event)">
                        @Model.PubTypeFilterList[i].PubTypeDisplayName 
                    </a>
                    <a>
                        <span class="k-icon k-i-plus show-pubtype-icon" id="showLstPubType_@Model.PubTypeFilterList[i].PubTypeID" onclick="displayPubTypeListBox(event)"></span>
                    </a>
                </td>
            </tr>
            <tr id="trPubType_@Model.PubTypeFilterList[i].PubTypeID.ToString()" class="show-pubtype-list" style="display:none;">
                <td valign="middle" align="center">
                    @Html.ListBox("lstPubType_" + Model.PubTypeFilterList[i].PubTypeID.ToString(), Model.PubTypeFilterList[i].PubList.ConvertAll(a =>
               {
                   return new SelectListItem()
                   {
                       Text = a.PubName.ToString(),
                       Value = a.PubID.ToString(),
                       Selected = false
                   };
               }), new { style = "width:200px;" })
                </td>
            </tr>
        </table>
        <div id="lstPubType_@Model.PubTypeFilterList[i].PubTypeID" style="display:none;">

        </div>
    }

}
