                                    HorizontalAlignment="Left"
                                    TextWrapping="Wrap"
                                    Margin="{StaticResource ToolSettingsHeader_Margin}"
                                    FontSize="12"/>
                            <StackPanel Orientation="Vertical" Grid.Row="1" SnapsToDevicePixels="True">
                                <Border Height="1" Background="{StaticResource ImageEditor_SeparatorOverlayBackground}"/>
                                <Border Height="1" Background="{StaticResource ImageEditor_SeparatorUnderlayBackground}"/>
                            </StackPanel>
                            <Grid Grid.Row="2" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Margin="{StaticResource ToolSettings_ContentPresenterMargin}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
