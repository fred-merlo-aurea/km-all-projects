                                        Foreground="{StaticResource ToolSettingsItem_Foreground}"/>
                                <CheckBox Grid.Row="7" Grid.ColumnSpan="6" IsChecked="True" Name="CheckPreserveAspectRatio" VerticalAlignment="Center">
                                    <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_PreserveAspectRatio" VerticalAlignment="Center" Foreground="{StaticResource ToolSettingsItem_Foreground}"/>
                                </CheckBox>
                            </Grid>
                            <StackPanel Orientation="Vertical" Grid.Row="3" SnapsToDevicePixels="True">
                                <Border Height="1" Background="{StaticResource ImageEditor_SeparatorOverlayBackground}"/>
                                <Border Height="1" Background="{StaticResource ImageEditor_SeparatorUnderlayBackground}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
