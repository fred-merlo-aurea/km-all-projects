                                        Grid.Column="0"
                                        IsInteger="False"
                                        Maximum="100000"
                                        Minimum="0"
                                        Margin="0 0 5 0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        NumberDecimalDigits="2"
                                        UpdateValueEvent="PropertyChanged"
                                        Width="70"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="%" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Foreground="{StaticResource ToolSettingsItem_Foreground}"/>
                                <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="3"
                                        telerik:LocalizationManager.ResourceKey="ImageEditor_Height"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Foreground="{StaticResource ToolSettingsItem_Foreground}"/>
                                <telerik:RadNumericUpDown x:Name="NumericHeightPercent"
