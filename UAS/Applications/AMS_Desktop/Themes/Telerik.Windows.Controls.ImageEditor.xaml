                                        Minimum="1"
                                        NumberDecimalDigits="0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="0 0 5 0"
                                        UpdateValueEvent="PropertyChanged"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="px" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Foreground="{StaticResource ToolSettingsItem_Foreground}"/>
                                <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        telerik:LocalizationManager.ResourceKey="ImageEditor_Height"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Foreground="{StaticResource ToolSettingsItem_Foreground}"/>
                                <telerik:RadNumericUpDown x:Name="NumericHeightPx"
                                        Grid.Row="2"
                                        Grid.Column="3"
                                        IsInteger="True"
                                        Maximum="4000"
                                        Minimum="1"
                                        Width="70"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="0 0 5 0"
                                        NumberDecimalDigits="0"
                                        UpdateValueEvent="PropertyChanged"/>
                                <TextBlock Grid.Row="2" Grid.Column="4" Text="px" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Foreground="{StaticResource ToolSettingsItem_Foreground}"/>
                                <TextBlock
                                        Grid.Row="3"
                                        Grid.ColumnSpan="6"
                                        telerik:LocalizationManager.ResourceKey="ImageEditor_RelativeSize"
