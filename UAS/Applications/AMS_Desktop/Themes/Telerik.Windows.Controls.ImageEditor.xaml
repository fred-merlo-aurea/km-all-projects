    <Style TargetType="toolsUI:DrawTextToolSettings" x:Key="DrawTextToolSettingsStyle">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Padding" Value="{StaticResource ToolSettings_ControlPadding}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:DrawTextToolSettings">
                    <Grid Margin="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                    telerik:LocalizationManager.ResourceKey="ImageEditor_DrawText"
                                    Foreground="{StaticResource ToolSettingsHeader_Foreground}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    TextWrapping="Wrap"
                                    Margin="{StaticResource ToolSettingsHeader_Margin}"
                                    FontSize="12"/>
                            <StackPanel Orientation="Vertical" Grid.Row="1" SnapsToDevicePixels="True">
                                <Border Height="1" Background="{StaticResource ImageEditor_SeparatorOverlayBackground}"/>
                                <Border Height="1" Background="{StaticResource ImageEditor_SeparatorUnderlayBackground}"/>
                            </StackPanel>
                            <Grid Grid.Row="2" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Margin="{StaticResource ToolSettings_ContentPresenterMargin}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                        Grid.Row="0"
                                        Grid.ColumnSpan="2"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource ToolSettingsItem_Foreground}"
                                        telerik:LocalizationManager.ResourceKey="ImageEditor_Text"/>
                                <TextBox
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Name="TextBox"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Width="188"
                                        HorizontalAlignment="Left"
                                        SnapsToDevicePixels="True"/>
                                <TextBlock x:Name="fontSizeHelperTextBlock" Grid.Row="2" Grid.ColumnSpan="2" Visibility="Collapsed" telerik:LocalizationManager.ResourceKey="ImageEditor_FontSize"/>
                                <toolsUI:NumericPropertyEditor PropertyName="{Binding ElementName=fontSizeHelperTextBlock, Path=Text}" Grid.Row="2" Grid.ColumnSpan="2" MinimumValue="1" MaximumValue="160" x:Name="NumericFontSize"/>
                                <TextBlock Grid.Row="3" VerticalAlignment="Center" Foreground="{StaticResource ToolSettingsItem_Foreground}" telerik:LocalizationManager.ResourceKey="ImageEditor_TextColor"/>
                                <telerik:RadColorPicker AutomaticColor="Black" Grid.Row="3" Grid.Column="1" x:Name="ColorPickerText" NoColorVisibility="Visible" HorizontalAlignment="Right" NoColorText="Black"/>
                                <TextBlock x:Name="horizontalPositionHelperTextBlock"
                                        Grid.Row="4"
                                        Grid.ColumnSpan="2"
                                        Visibility="Collapsed"
                                        telerik:LocalizationManager.ResourceKey="ImageEditor_HorizontalPosition"/>
                                <toolsUI:NumericPropertyEditor PropertyName="{Binding ElementName=horizontalPositionHelperTextBlock, Path=Text}" Grid.Row="4" Grid.ColumnSpan="2" Name="NumericPositionX"/>
                                <TextBlock x:Name="verticalPositionHelperTextBlock"
                                        Grid.Row="5"
                                        Grid.ColumnSpan="2"
                                        Visibility="Collapsed"
                                        telerik:LocalizationManager.ResourceKey="ImageEditor_VerticalPosition"/>
                                <toolsUI:NumericPropertyEditor PropertyName="{Binding ElementName=verticalPositionHelperTextBlock, Path=Text}" Grid.Row="5" Grid.ColumnSpan="2" Name="NumericPositionY"/>
                                <TextBlock x:Name="rotationHelperTextBlock" Grid.Row="6" Grid.ColumnSpan="2" Visibility="Collapsed" telerik:LocalizationManager.ResourceKey="ImageEditor_Rotation"/>
                                <toolsUI:NumericPropertyEditor
                                        PropertyName="{Binding ElementName=rotationHelperTextBlock, Path=Text}"
                                        Grid.Row="6"
                                        Grid.ColumnSpan="2"
                                        Name="NumericRotationDegrees"
                                        MaximumValue="180"
                                        MinimumValue="-180"/>
                            </Grid>
                            <StackPanel Orientation="Vertical" Grid.Row="3" SnapsToDevicePixels="True">
                                <Border Height="1" Background="{StaticResource ImageEditor_SeparatorOverlayBackground}"/>
                                <Border Height="1" Background="{StaticResource ImageEditor_SeparatorUnderlayBackground}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:ResizeToolSettings" x:Key="ResizeToolSettingsStyle">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Padding" Value="{StaticResource ToolSettings_ControlPadding}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:ResizeToolSettings">
                    <Grid Margin="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
