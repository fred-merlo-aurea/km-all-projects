                                        Grid.Row="4"
                                        telerik:LocalizationManager.ResourceKey="ImageEditor_Width"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Foreground="{StaticResource ToolSettingsItem_Foreground}"/>
