<Window x:Class="Circulation.Windows.PrintSaveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" 
        Title="Confirmation" Height="150" Width="400" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10" VerticalAlignment="Top" Text="Save/Print" FontSize="20" />
        <TextBlock Margin="10" VerticalAlignment="Bottom" Text="Would you like to save or print?" />
        <Rectangle Grid.Row="1" Grid.ColumnSpan="2" Fill="#C7CACC" />
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1" HorizontalAlignment="Right" Grid.ColumnSpan="2">
            <telerik:RadButton Name="btnSave" Grid.Row="1" Width="89" Height="23" Content="Save" Click="btnSave_Click"/>
            <telerik:RadButton Name="btnPrint" Width="80" Height="23" Content="Print" Click="btnPrint_Click"/>
        </StackPanel>
    </Grid>
</Window>
