        </tr>
        <tr>
            <td></td>
            <td>
                <button type="submit" class="btn-blue2" id="btnSave">Save</button>
                <button type="button" class="btn-blue2" id="btnCancel" onclick="return showAlert()">Cancel</button>
            </td>
        </tr>
    </table>
}

