@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">
    @if (@ViewData["ErrorMessage"] != null)
    {
        @ViewData["ErrorMessage"].ToString()
    }
    else
    {
        <label>Sorry! We're having trouble processing your request right now</label>
    }</h2>
</hgroup>
