<div class="wrapper modal modaladdnewform">
    <fieldset title="" style="border :none;">
         @Html.Hidden("Id", null, new Dictionary<string, object> { { "data-bind", "value:Id" } })
        <div class="formbox">
            <div style="display:inline;float:left;padding-left: 2em;margin: 0">
                <img alt="Information" src="/ecn.MarketingAutomation/Images/Warn_ico.png" border="0">
            </div>
            <div class="text" style="display:inline;float:left;padding-left: 2em;padding-bottom: 2em;margin: 0;">
                Are you sure you want to delete this item?
            </div>
        </div>
        <div class="buttonsgroup" style="margin: 0 auto; width: 300px; text-align: center;">
               @Html.Kendo().Button().Name("Delete").Content("Delete").HtmlAttributes(new { @class = "btn" })
               @Html.Kendo().Button().Name("Cancel").Content("Cancel").HtmlAttributes(new { @class = "btn", type = "button", onclick = "closeWindow('DeleteWindow')" })
         </div>
    </fieldset>
</div>