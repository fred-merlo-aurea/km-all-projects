<%@ Page Language="c#" Inherits="ecn.communicator.blastsmanager.conversionTracker"
    CodeBehind="conversionTracker.aspx.cs"  MasterPageFile="~/MasterPages/Communicator.Master" %>

<%@ Register TagPrefix="AU" Namespace="ActiveUp.WebControls" Assembly="ActiveUp.WebControls" %>
<%@ Register TagPrefix="cpanel" Namespace="BWare.UI.Web.WebControls" Assembly="BWare.UI.Web.WebControls.DataPanel" %>
<%@ MasterType VirtualPath="~/MasterPages/Communicator.Master" %>
<asp:content id="Content1" contentplaceholderid="head" runat="server">
</asp:content>
<asp:content id="Content2" contentplaceholderid="ContentPlaceHolder1" runat="server">
    <table id="layoutWrapper" cellspacing="0" cellpadding="0" width="100%" border='0'>
        <tr>
            <td height="9">
            </td>
        </tr>
        <tr>
            <td colspan="2" class="gradient">
                &nbsp;</td>
        </tr>
        <tr>
            <td colspan='2' class="offWhite greySidesB">
                <div class="moveUp">
                    <cpanel:DataPanel ID="Datapanel3" class="noUnderline" Style="z-index: 101;" runat="Server"
                        ExpandImageUrl="/ecn.images/images/collapse2.gif" CollapseImageUrl="/ecn.images/images/collapse2.gif"
                        CollapseText="Click to hide Visit Conversion list" ExpandText="Click to display Visit Conversion list"
                        Collapsed="False" TitleText="&nbsp;&nbsp;VISIT CONVERSION REPORTS" AllowTitleExpandCollapse="True">
                        <br />
                        <asp:datagrid id="ClicksVisitConversionGrid" runat="Server" cssclass="gridWizard"
                            repeatcolumns="3" width="100%">
						<ItemStyle></ItemStyle>
						<HeaderStyle CssClass="gridheaderWizard"></HeaderStyle>
						<FooterStyle CssClass="tableHeader1"></FooterStyle>
					</asp:datagrid>
                        <br />
                        <div align='right'>
                            <asp:label id="conversionFormula" runat="Server" cssclass="tableContentSmall"></asp:label>
                        </div>
                    </cpanel:DataPanel>
                </div>
            </td>
        </tr>
        <tr>
            <td height="18">
            </td>
        </tr>
        <tr>
            <td colspan='2' class="tableheader">
                <div align='right'>
                    Total Revenue generated by this Blast:&nbsp;<asp:label id="totalConversionRevenue"
                        runat="Server" cssclass="tableheader"></asp:label></div>
            </td>
        </tr>
        <tr>
            <td class="gradient" colspan="2">
                &nbsp;</td>
        </tr>
        <tr>
            <td class="offWhite greySidesB">
                <div class="moveUp">
                    <cpanel:DataPanel ID="Datapanel1" class="noUnderline" Style="z-index: 101;" runat="Server"
                        ExpandImageUrl="/ecn.images/images/collapse2.gif" CollapseImageUrl="/ecn.images/images/collapse2.gif"
                        CollapseText="Click to hide Revenue Conversion list" ExpandText="Click to display Revenue Conversion list"
                        Collapsed="False" TitleText="&nbsp;&nbsp;REVENUE CONVERSION REPORTS" AllowTitleExpandCollapse="True">
                        <br />
                        <asp:datagrid id="RevenueConversionGrid" runat="Server" cssclass="gridWizard" width="100%"
                            pagesize="10" autogeneratecolumns="False">
						<ItemStyle></ItemStyle>
						<HeaderStyle CssClass="gridheaderWizard"></HeaderStyle>
						<FooterStyle CssClass="tableHeader1"></FooterStyle>
						<Columns>
							<asp:HyperLinkColumn ItemStyle-Width="60%" DataTextField="EmailAddress" DataTextFormatString="<font size=-2>{0}</font>"
								HeaderText="Email Address" DataNavigateUrlField="EmailID" DataNavigateUrlFormatString="../lists/emaileditor.aspx?EmailID={0}"></asp:HyperLinkColumn>
							<asp:BoundColumn ItemStyle-Width="20%" ItemStyle-HorizontalAlign="Center" HeaderStyle-HorizontalAlign="Center"
								DataField="TOTALTRANSACTIONS" HeaderText="# of Transactions"></asp:BoundColumn>
							<asp:BoundColumn ItemStyle-Width="20%" ItemStyle-HorizontalAlign="Center" HeaderStyle-HorizontalAlign="Center"
								DataField="TOTALREVENUE" HeaderText="Converted Revenue" DataFormatString="$&nbsp;{0:#,###.##}"></asp:BoundColumn>
						</Columns>
					</asp:datagrid>
                    </cpanel:DataPanel>
                </div>
            </td>
        </tr>
        <tr>
            <td height="9">
            </td>
        </tr>
    </table>
</asp:content>
